extends ../layouts/app.pug

block content
  .container.fluid
    .row.justify-content-center.pb-5.mt-5
      .col-12.col-sm-7.col-md-5
        .card.shadow.border-top.border-primary
          .card-body
            h3.mb-4.mt-3.text-center Login form
            +formFor({ url: url('sessions#create'), method: 'post' })
              +inputWithoutLabel(f, 'e-mail', 'email')
              +inputWithoutLabel(f, 'password', 'password', { as: 'password' })
              +button('secondary', 'Confirm')
